<%= render partial: "layouts/error", locals: {object: @shoe}  %>


<%= form_for([@brand, @shoe]) do |f| %>
    <%= f.label "Price" %> 
    <%= f.number_field :price, step: 0.01, min: 0 %><br></br>
    <%= f.label(:color) %> 
    <%= f.text_field :color %><br></br>
    <%= f.label(:condition) %> 
    <%= f.text_field :condition %><br></br>
    <%= brand_form_fields(f) %>
    <%= f.submit %> 
<% end %>
